<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_intherit_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.inh.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="property_id"/>          
            </xpath>    
        </field>
    </record>

    <record id="view_inherit_employee_kanban" model="ir.ui.view">
        <field name="name">hr.employee.inherit.kanban</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//li[field[@name='work_email']]" position="after">
                <li>
                    <field name="property_id"/>
                </li>          
            </xpath>    
        </field>
    </record>

    <record id="view_intherit_employee_tree" model="ir.ui.view">
        <field name="name">hr.employee.inh.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='country_id']" position="after">
                <field name="property_id"/>          
            </xpath>    
        </field>
    </record>
</odoo>