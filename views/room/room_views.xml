<odoo>
    <record id="view_room_kanban" model="ir.ui.view">
        <field name="name">room.kanban</field>
        <field name="model">room.main</field>
        <field name="arch" type="xml">
            <kanban string="Gestión de Habitaciones">
                <field name="name"/>
                <field name="status"/>
                <field name="image_1920"/>
                <field name="responsible_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_rental_room_kanban">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('room.main', 'image_1920', record.id)"/>
                            </div>
                            <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <t t-esc="record.name.value"/>  
                                    </strong>
                                    <ul>
                                        <li t-if="record.status.raw_value">
                                            <strong>Estado:</strong>
                                            <t t-esc="record.status.value"/> 
                                        </li>
                                        <li t-if="record.responsible_id.value">
                                            <strong>Responsable:</strong>
                                            <div>
                                                <field name="responsible_id"
                                                       widget="many2one_avatar"/>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_rental_room_form" model="ir.ui.view">
        <field name="name">room.main.form</field>
        <field name="model">room.main</field>
        <field name="arch" type="xml">
            <form string="Gestión de Habitaciones">
                <header>
                    <div style="display: flex; gap: 10px;">
                        <field name="status" widget="statusbar" statusbar_visible="draft,reserved,available,occupied,maintenance"/>   
                        <button name="action_change_status" 
                            type="object" 
                            string="Cambiar Estado" 
                            class="oe_highlight"
                            invisible="status in ('booked')"/>
                    </div>
                    <div class="o_form_button_box" style="display: flex; gap: 10px;">
                    <button name="action_change_status" 
                            type="object" 
                            string="Cambiar Estado" 
                            class="oe_highlight"
                            invisible="status in ('draft', 'available', 'occupied', 'maintenance')"/>
                    <!-- Botón de recibo reserva -->
                    <button name="print_booking_recipe" 
                            type="object" 
                            string="Imprimir Recibo Reserva" 
                            invisible="status in ('draft', 'available', 'occupied', 'maintenance')"
                            class="btn btn-secondary o_form_button_icon fa fa-print"/> <!-- Margen horizontal -->
                    <!-- Botón de habitación reservada -->
                    <button name="print_booked_room" 
                            type="object" 
                            string="Imprimir Habitación Reservada" 
                            invisible="status in ('draft', 'available', 'occupied', 'maintenance')"
                            class="btn btn-secondary o_form_button_icon fa fa-print"/> <!-- Margen horizontal -->
                    <!-- Botón de terminación contrato -->
                    <button name="action_termination_room" 
                            type="object" 
                            string="Imprimir Terminación Contrato" 
                            invisible="status in ('draft', 'available', 'occupied', 'maintenance')"
                            class="btn btn-secondary o_form_button_icon fa fa-print"/> <!-- Margen horizontal -->
                </div>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" modifiers="{}">
                        <button class="oe_stat_button" type="object"
                                name="return_action_view_xml_id_occupacity"
                                help="Historial de Ocupación"
                                context="{'xml_id': 'action_occupacity'}"
                                icon="fa-users">
                            <field string="Historial de Ocupación"
                                   name="occupancy_history_count"
                                   widget="statinfo"/>
                        </button>
 
                        <button class="oe_stat_button" type="object"
                                name="return_action_view_xml_id_maintenance"
                                help="Historial de Mantenimiento"
                                context="{'xml_id': 'action_maintenance_main'}"
                                icon="fa-cogs">
                            <field string="Historial de Mantenimiento"
                                name="maintenance_history_count"
                                widget="statinfo"/>
                        </button>

                        <button class="oe_stat_button" type="object"
                                name="return_action_view_xml_id_contract"
                                help="Historial de Contratos"
                                context="{'xml_id': 'action_contract_room'}"
                                icon="fa-book">
                            <field string="Historial de Contratos"
                                name="contract_history_count"
                                widget="statinfo"/>
                        </button>

                        <button class="oe_stat_button" type="object"
                                name="return_action_view_xml_id_booking"
                                help="Historial de Reservas"
                                context="{'xml_id': 'action_booking'}"
                                icon="fa-solid fa-bed">
                            <field string="Historial de Rervas"
                                name="booking_history_count"
                                widget="statinfo"/>
                        </button>
                        
                    </div>
                    <div class="o_col o_col_6">
                        <group>
                            <field name="image_1920" widget="image"
                                   options="{'preview_image': 'image_1920', 'size': (128, 128)}"
                                   class="oe_avatar"/>
                        </group>
                    </div>
                    <group>
                        <group class="oe_subgroup" string="Información de Habitación">
                            <field name="name"/>
                            <field name="property_id" onchange="onchange_property_id()" readonly="status in ('draft', 'available', 'occupied', 'maintenance')"/>
                            <field name="room_type"/>
                            <field name="rental_price" widget="monetary" invisible="status in ('booked')"/>
                            <field name="tenant_id" readonly="status in ('draft', 'available', 'occupied', 'maintenance')"/>
                            <field name="contract_open" readonly="1"/>
                            <field name="responsible_id" widget="many2one_avatar"/>
                            <field name="months_remaining" invisible="status in ('booked')"/>
                            <field name="payment_insurance" invisible="status in ('booked')"/>
                            <button string="Información adicional"
                                    type="object"
                                    name="open_payment_insurance"
                                    class="btn-primary"
                                    invisible="status in ('booked')"/>
                        </group>
                    </group>

                    <group string="Información de Reserva" invisible="status in ('draft', 'available', 'occupied', 'maintenance')">
                        <group>
                            <field name="num_recibo"/>
                            <field name="issue_date" widget="date"/>
                            <field name="due_date" widget="date"/>
                        </group>
                        <group>
                            <field name="booking_amount" widget="monetary"/>
                            <field name="iva" widget="float" digits="[6,2]"/>
                            <field name="irpf" widget="float" digits="[6,2]"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Imágenes">
                            <field name="room_photos" widget="many2many_binary"/>
                        </page>
                        <page string="Ocupantes">
                            <field name="tenant_ids" colspan="3">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Secciones" name="sections">
                            <field name="size_m2">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="height"/>
                                    <field name="width"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                        <!-- <page string="Mobiliario y Servicios">
                            <group class="oe_subgroup">
                                <field name="furniture_list" widget="many2many_tags"/>
                                <field name="services_included" widget="many2many_tags"/>
                            </group>
                        </page> -->
                        <page string="Descripción" name="description">
                            <group>
                                <textarea name="description" colspan="2"/>
                            </group>
                        </page>
                        <page string="Muebles">      
                            <field name="furniture_list">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>