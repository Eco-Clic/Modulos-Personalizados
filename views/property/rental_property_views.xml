<odoo>
        <!-- Vista Form de las propiedades (gestion de alquileres) -->
        <record id="view_rental_property_main_form" model="ir.ui.view">
            <field name="name">rental.property.main.form</field>
            <field name="model">property.main</field>
            <field name="arch" type="xml">
                <form string="Propiedad" edit="false" create="false">
                    <sheet>
                        <div class="o_col o_col_6">
                            <group>
                                <field name="image_1920" widget="image"
                                       options="{'preview_image': 'image_1920', 'size': (128, 128)}"
                                       class="oe_avatar"/>
                            </group>
                        </div>
                        <group>
                            <group class="oe_subgroup">
                                <field name="address"/>
                                <field name="property_type"/>
                                <field name="number_of_rooms"/>
                                <field name="number_of_bathrooms"/>
                                <field name="size_m2"/>
                                <field name="floor"/>
                                <field name="door_number"/>
                                <field name="number_of_keys"/>
                                <field name="months_remaining"/>
                            </group>
                            <group class="oe_subgroup">
                                <field name="contract_open" readonly="1"/>
                                <field name="property_reference"/>
                                <field name="energy_certificate_list"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Adjuntos">
                                <group>
                                    <field name="property_deed"/>
                                    <field name="energy_certificate"/>
                                    <field name="habitability_certificate"/>
                                    <field name="special_permits"/>
                                </group>
                            </page>
                            <page string="Habitaciones">
                                <field name="room_ids" mode="kanban" context="{'default_property_id': id}">
                                    <kanban>
                                        <field name="name"/>
                                        <field name="status"/>
                                        <field name="color"/>
                                        <field name="image_1920"/>
                                        <field name="has_a_tenant"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                                <div t-att-class="color + (record.name.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                    <div class="o_kanban_image">
                                                        <img alt="Imagen de Contacto"
                                                             t-att-src="kanban_image('room.main', 'image_1920', record.id.raw_value)"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <div>
                                                            <strong>
                                                                <field name="name"/>
                                                            </strong>
                                                        </div>
                                                        <div>
                                                            <span>Estado:</span>
                                                            <field name="status"/>
                                                        </div>
                                                        <div>
                                                            <span>Tiene Inquilino:</span>
                                                            <field name="has_a_tenant"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                    <form string="Habitaciones">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name" string="Nombre"/>
                                                    <field name="status"/>
                                                    <field name="has_a_tenant"/>
                                                </group>
                                                <group>
                                                    <field name="room_type"/>
                                                    <field name="rental_price" widget="monetary"/>
                                                    <field name="responsible_id" widget="many2one_avatar"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Muebles/Servicios">
                                <group string = 'Muebles'>
                                    <group string="Terraza">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Patio Interior">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Patio Exterior">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Habitaciones">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Baño">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Cocina">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Salón">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Comedor">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Pasillo">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                    <group string="Entrada">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                                <group string = 'Servicios'>
                                    <field name='service_list'>
                                        <tree editable='bottom'>
                                            <field name='name'/>
                                            <field name='description'/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista Tree de las propiedades -->
        <record id="view_rental_property_main_tree" model="ir.ui.view">
            <field name="name">property.main.tree</field>
            <field name="model">property.main</field>
            <field name="arch" type="xml">
                <tree string="Propiedades" edit="false" create="false">
                    <field name="address"/>
                    <field name="property_type"/>
                    <field name="number_of_bathrooms"/>
                    <field name="size_m2"/>
                    <field name="property_status"/>
                </tree>
            </field>
        </record>
</odoo>