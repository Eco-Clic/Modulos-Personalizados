<odoo>
    <data>
       <!-- Vista Kanban de las propiedades -->
        <record id="view_property_main_kanban" model="ir.ui.view">
            <field name="name">property.main.kanban</field>
            <field name="model">property.main</field>
            <field name="arch" type="xml">
                <kanban string="Propiedades en Alquiler">
                    <field name="name"/>
                    <field name="property_status"/>
                    <field name="number_of_rooms"/>
                    <field name="size_m2"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_card">
                                    <div class="o_kanban_details">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('property.main', 'image_1920', record.id)"/>
                                        </div>
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <div>
                                            <span>Estado:</span>
                                            <t t-if="record.property_status.raw_value == 'available'">
                                                <span class="badge badge-success">Disponible</span>
                                            </t>
                                            <t t-if="record.property_status.raw_value == 'occupied'">
                                                <span class="badge badge-warning">Ocupada</span>
                                            </t>
                                            <t t-if="record.property_status.raw_value == 'maintenance'">
                                                <span class="badge badge-danger">En Mantenimiento</span>
                                            </t>
                                        </div>
                                        <div>
                                            <span>Habitaciones:</span>
                                            <field name="number_of_rooms"/>
                                        </div>
                                        <div>
                                            <span>Tamaño (m²):</span>
                                            <field name="size_m2"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista Form de las propiedades -->
        <record id="view_property_main_form" model="ir.ui.view">
            <field name="name">property.main.form</field>
            <field name="model">property.main</field>
            <field name="arch" type="xml">
                <form string="Propiedad">
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="available,occupied,maintenance"/>
                        <button name="action_change_status" type="object" string="Cambiar Estado" class="oe_highlight"/>
                        <!-- Botón de Check-In -->
                        <!-- <button name="action_open_check_in_wizard"
                                string="Check-In"
                                type="object"
                                class="btn-primary"
                                context="{'default_owner_id': active_id}"/> -->
                        <!-- Botón de Check-Out -->
                        <!-- <button name="action_open_check_out_wizard"
                                string="Check-Out"
                                type="object"
                                class="btn-secondary"
                                context="{'default_owner_id': active_id}"/> -->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">

                            <!-- Historial de Contratos -->              
                            <button class="oe_stat_button" type="object"
                                    name="return_action_view_xml_id_contract"
                                    help="Historial de Contratos"
                                    context="{'xml_id': 'action_contract_property'}"
                                    icon="fa-book">
                                <field string="Historial de Contratos"
                                    name="contract_history_count"
                                    widget="statinfo"/>
                            </button>
                        </div>
                        <div class="o_col o_col_6">
                            <group>
                                <field name="image_1920" widget="image"
                                       options="{'preview_image': 'image_1920', 'size': (128, 128)}"
                                       class="oe_avatar"/>
                            </group>
                        </div>
                        <group>
                            <group class="oe_subgroup">
                                <field name="address"/>
                                <field name="property_type"/>
                                <field name="number_of_rooms"/>
                                <field name="number_of_bathrooms"/>
                                <field name="size_m2"/>
                                <field name="floor"/>
                                <field name="door_number"/>
                                <field name="number_of_keys"/>
                                <field name="months_remaining"/>
                            </group>
                            <group class="oe_subgroup">
                                <field name="owner_id"/>
                                <field name="contract_open" readonly="1"/>
                                <field name="property_reference"/>
                                <field name="energy_certificate_list"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Adjuntos">
                                <group>
                                    <field name="property_deed"/>
                                    <field name="energy_certificate"/>
                                    <field name="habitability_certificate"/>
                                    <field name="special_permits"/>
                                </group>
                            </page>
                            <page string="Habitaciones">
                                <field name="room_ids" mode="kanban" context="{'default_rental_id': id}">
                                    <kanban>
                                        <field name="name"/>
                                        <field name="status"/>
                                        <field name="color"/>
                                        <field name="image_1920"/>
                                        <field name="has_a_tenant"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                                <div t-att-class="color + (record.name.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                    <div class="o_kanban_image">
                                                        <img alt="Imagen de Contacto"
                                                             t-att-src="kanban_image('room.main', 'image_1920', record.id.raw_value)"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <div>
                                                            <strong>
                                                                <field name="name"/>
                                                            </strong>
                                                        </div>
                                                        <div>
                                                            <span>Estado:</span>
                                                            <field name="status"/>
                                                        </div>
                                                        <div>
                                                            <span>Tiene Inquilino:</span>
                                                            <field name="has_a_tenant"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                    <form string="Habitaciones">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name" string="Nombre"/>
                                                    <field name="status"/>
                                                    <field name="has_a_tenant"/>
                                                </group>
                                                <group>
                                                    <field name="room_type"/>
                                                    <field name="rental_price" widget="monetary"/>
                                                    <field name="responsible_id" widget="many2one_avatar"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Muebles/Servicios">
                                <notebook>
                                    <page string="Terraza">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Patio Interior">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Patio Exterior">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Habitaciones">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Baño">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Cocina">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Salón">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Comedor">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Pasillo">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Entrada">
                                        <field name="furniture_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Servicios">
                                        <field name="service_list">
                                            <tree editable="bottom">
                                                <field name="name"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista Tree de las propiedades -->
        <record id="view_property_main_tree" model="ir.ui.view">
            <field name="name">property.main.tree</field>
            <field name="model">property.main</field>
            <field name="arch" type="xml">
                <tree string="Propiedades">
                    <field name="address"/>
                    <field name="property_type"/>
                    <field name="number_of_bathrooms"/>
                    <field name="size_m2"/>
                    <field name="property_status"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
