<odoo>

    <!-- Tree para las fianzas -->
    <record id="view_bail_bounds_tree" model="ir.ui.view">
        <field name="name">bail.bound.history.tree</field>
        <field name="model">bail.bounds.history</field>
        <field name="arch" type="xml">
            <tree string="Fianzas">
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="amount"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_bail_bounds_form" model="ir.ui.view">
        <field name="name">bail.bound.history.form</field>
        <field name="model">bail.bounds.history</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft, published, paid"/>
                    <button name="action_change_status" type="object" string="Cambiar Estado" class="oe_highlight"/>
                    <button name="action_change_status" type="object" string="Cancelar"/>
                </header>

                <field name="name"/>

                <group string="Descripcion fianza">
                    <field name="tenant_id"/>
                    <field name="amount"/>
                </group>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>