<odoo>

    <!-- Form contratos de propiedad -->
    <record id="view_property_contract_form" model="ir.ui.view">
        <field name="name">property.contract.form</field>
        <field name="model">property.contract</field>
        <field name="arch" type="xml">
            <form string="Contrato">
                <sheet>
                    <header>
                        <field name="status" widget="statusbar"/>
                        <button name="action_contract_draft"
                                type="object"
                                string="Mover a Borrador"
                                invisible="status in ('draft')"
                                class="oe_highlight"/>
                        <button name="action_contract_open"
                                type="object"
                                string="Abrir Contrato"
                                invisible="status in ('open')"
                                class="btn-success"/>
                        <button name="action_contract_closed"
                                type="object"   
                                invisible="status in ('closed')"
                                string="Cerrar Contrato"
                                class="btn-warning"/>
                        <button name="action_print_contract_property"
                                string="Imprimir Contrato de Propeidad"
                                type="object"
                                class="btn btn-secondary o_form_button_icon fa fa-print"/>
                        <button name="action_print_contract_anex_property"
                                string="Imprimir Anexo habitacion"
                                type="object"
                                class="btn btn-secondary o_form_button_icon fa fa-print"/>
                        <button name="action_print_termination_contract"
                                string="Imprimir FinalizaciÃ³n de contrato"
                                type="object"
                                class="btn btn-secondary o_form_button_icon fa fa-print"/>
                    </header>
                    <group>
                        <group class="oe_subgroup">
                            <field name="contract_number"/>
                            <field name="is_active" string="Contrato Vigente por Fecha"/>
                            <field name="active" readonly="1"/>
                            <field name="contract_date"/>
                            <field name="property_id"/>
                            <field name="owner_id"/>
                            <field name="agency_id"/>
                        </group>
                        <group class="oe_subgroup">
                            <field name="contract_start_date"/>
                            <field name="contract_end_date"/>
                            <field name="renewal_terms"/>
                            <field name="monthly_rent" widget="monetary"/>
                            <field name="security_deposit" widget="monetary"/>
                            <field name="penalty_terms"/>
                            <field name="late_payment_fee"/>
                        </group>
                        <group string="Responsabilidades" class="oe_subgroup">
                            <field name="owner_responsibilities"/>
                            <field name="agency_responsibilities"/>
                        </group>
                        <group class="oe_subgroup">
                            <field name="signed_contract" widget="signature"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Adjuntos del Contrato">
                            <field name="contract_attachments"/>
                        </page>
                        <page string="Contratos de habitaciones">
                            <field name="room_contract_ids" mode="kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="oe_kanban_details">
                                                    <div>
                                                        <strong>
                                                            <field name="name"/>
                                                        </strong>
                                                    </div>
                                                    <div>
                                                        <span>Estado:</span>
                                                        <field name="status"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>

            </form>
        </field>
    </record>

