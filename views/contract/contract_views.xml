    <!-- Kanban de los contratos de habitacion -->
    <record id="view_room_contract_kanban" model="ir.ui.view">
        <field name="name">room.contract.kanban</field>
        <field name="model">room.contract</field>
        <field name="arch" type="xml">
            <kanban string="Contratos Habitacion" edit="false" create="false">
                <field name="is_active"/>
                <field name="contract_start_date"/>
                <field name="contract_end_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card">
                                <div class="o_kanban_details">
                                    <strong>
                                         <field name="tenant_id"
                                               widget="many2one_avatar_user"/> 
                                    </strong>
                                    <div>
                                        <span>Estado:</span>
                                        <t t-if="record.is_active.raw_value">
                                            <span class="badge badge-success">Activo</span>
                                        </t>
                                        <t t-else="">
                                            <span class="badge badge-danger">Inactivo</span>
                                        </t>
                                    </div>
                                    <div>
                                        <span>Fecha de Inicio:</span>
                                        <span class="o_field_date">
                                            <field name="contract_start_date"/>
                                        </span>
                                    </div>
                                    <div>
                                        <span>Fecha de Fin:</span>
                                        <span class="o_field_date">
                                            <field name="contract_end_date"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

