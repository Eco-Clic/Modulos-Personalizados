<odoo>

    <!-- Form para los servicios -->
    <record id="view_services_room_item_form" model="ir.ui.view">
        <field name="name">services.item.form</field>
        <field name="model">services.item</field>
        <field name="arch" type="xml">
            <form string="Elemento de Servicio">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Form para los muebles -->
    <record id="view__furniture_room_item_form" model="ir.ui.view">
        <field name="name">furniture.item.form</field>
        <field name="model">furniture.item</field>
        <field name="arch" type="xml">
            <form string="Elemento de Mobiliario">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>