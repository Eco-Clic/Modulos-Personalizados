<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rent_tenant_form" model="ir.ui.view">
        <field name="name">rent.tenant.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='contact_addresses']" position="after">
                <page string="Rental Information">
                    <group>
                        <group class="oe_subgroup">
                            <field name="birth_date"/>
                            <field name="identification_number"/>
                            <field name="marital_status"/>
                            <field name="nationality"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="bank_account_number"/>
                            <field name="address"/>
                            <field name="employment_status"/>
                            <field name="monthly_income"/>
                            <field name="property_id"/>
                            <field name="room_id"/>
                            <field name="lease_start_date"/>
                            <field name="lease_end_date"/>
                            <field name="monthly_rent"/>
                            <field name="deposit_amount"/>
                            <field name="guarantees"/>
                        </group>

                        <group class="oe_subgroup">
                            <field name="rental_payment_history_ids"/>
                            <field name="incident_history_ids"/>
                            <field name="communication_history_ids"/>
                            <field name="co_signer_ids"/>
                            <field name="signed_lease_contract"/>
                            <field name="id_document"/>
                            <field name="deposit_receipt"/>
                            <field name="income_proof"/>
                            <field name="additional_guarantees"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>