<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del Wizard -->
        <record id="view_maintenance_report_wizard_form" model="ir.ui.view">
            <field name="name">maintenance.report.wizard.form</field>
            <field name="model">maintenance.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte de Mantenimiento">
                    <group>
                        <field name="report_format"/>
                    </group>
                    <footer>
                        <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>